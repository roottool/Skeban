{
  "name": "skeban",
  "productName": "Skeban",
  "version": "0.3.2",
  "description": "Sketches your brain in kanban",
  "main": "./build/index.js",
  "repository": "https://github.com/roottool/skeban.git",
  "author": "roottool",
  "license": "MIT",
  "scripts": {
    "build:dev:main": "webpack --config ./config/webpack.dev.config.main.ts",
    "build:dev:renderer": "webpack --config ./config/webpack.dev.config.renderer.ts",
    "build:prod:main": "webpack --config ./config/webpack.prod.config.main.ts",
    "build:prod:renderer": "webpack --config ./config/webpack.prod.config.renderer.ts",
    "build": "rimraf build && concurrently \"yarn run build:prod:main\" \"yarn run build:prod:renderer\"",
    "build:dev": "rimraf build && concurrently \"yarn run build:dev:main\" \"yarn run build:dev:renderer\"",
    "build:watch": "rimraf build && concurrently \"yarn run build:dev:main\" \"webpack --config ./config/webpack.dev.config.renderer.ts --watch\"",
    "start": "electron .",
    "fix": "eslint --fix \"config/**\" && eslint --fix \"src/**\"",
    "lint": "eslint \"config/**\" && eslint \"src/**\"",
    "prepack": "yarn run build && rimraf dist",
    "pack": "concurrently \"yarn run pack:mac\" \"yarn run pack:win\"",
    "pack:mac": "electron-builder --mac --x64",
    "pack:win": "electron-builder --win --x64"
  },
  "build": {
    "appId": "jp.roottool.skeban",
    "productName": "Skeban",
    "copyright": "Copyright Â© 2019 roottool",
    "files": [
      "build/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg",
      "icon": "build/icons/icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icons/icon.ico"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.5.4",
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.7.4",
    "@babel/plugin-proposal-optional-chaining": "^7.7.4",
    "@babel/preset-env": "^7.5.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/register": "^7.4.4",
    "@types/copy-webpack-plugin": "^5.0.0",
    "@types/draft-js": "^0.10.34",
    "@types/html-webpack-plugin": "^3.2.0",
    "@types/markdown-to-jsx": "^6.9.0",
    "@types/prismjs": "^1.16.0",
    "@types/react": "^16.8.23",
    "@types/react-beautiful-dnd": "^11.0.2",
    "@types/react-dom": "^16.8.4",
    "@types/react-router-dom": "^5.1.2",
    "@types/rehype-react": "^3.1.0",
    "@types/showdown": "^1.9.3",
    "@types/styled-components": "^4.1.18",
    "@types/uuid": "^3.4.5",
    "@types/webpack": "^4.4.34",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "babel-loader": "^8.0.6",
    "concurrently": "^5.0.0",
    "copy-webpack-plugin": "^5.0.4",
    "cross-env": "^6.0.3",
    "css-loader": "^3.0.0",
    "electron": "^7.1.2",
    "electron-builder": "^21.1.1",
    "electron-store": "^5.1.0",
    "eslint": "^6.0.1",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-loader": "^3.0.2",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^2.3.0",
    "file-loader": "^5.0.2",
    "html-webpack-plugin": "^3.2.0",
    "monaco-editor": "^0.18.1",
    "monaco-editor-webpack-plugin": "^1.7.0",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "style-loader": "^1.0.0",
    "ts-node": "^8.3.0",
    "tsconfig-paths": "^3.8.0",
    "typescript": "^3.5.3",
    "webpack": "^4.35.3",
    "webpack-cli": "^3.3.5"
  },
  "dependencies": {
    "@material-ui/core": "^4.2.0",
    "@material-ui/icons": "^4.2.1",
    "codemirror": "^5.49.2",
    "dexie": "^2.0.4",
    "highlight.js": "^9.16.2",
    "moment": "^2.24.0",
    "react": "^16.8.6",
    "react-beautiful-dnd": "^12.1.1",
    "react-dom": "^16.8.6",
    "react-monaco-editor": "^0.32.1",
    "react-router-dom": "^5.0.1",
    "rehype-highlight": "^3.1.0",
    "rehype-react": "^4.0.1",
    "remark-parse": "^7.0.2",
    "remark-rehype": "^5.0.0",
    "styled-components": "^4.3.2",
    "typeface-roboto": "^0.0.75",
    "unified": "^8.4.2",
    "unstated-next": "^1.1.0"
  }
}
